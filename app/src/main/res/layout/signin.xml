<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="欢迎回到网信"
        android:textColor="#fefefe"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginusername"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#5c5c63"
            android:hint="用户名/手机号"
            android:paddingLeft="60dp"
            android:textColorHint="#e0e0e0"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/loginusername"
            android:layout_alignLeft="@id/loginusername"
            android:layout_alignTop="@id/loginusername"
            android:paddingLeft="10dp"
            android:src="@mipmap/loginuser" />

        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@id/loginusername"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#5c5c63"
            android:hint="输入您的密码"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:textColorHint="#e0e0e0"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/loginpassword"
            android:layout_alignLeft="@id/loginpassword"
            android:layout_alignTop="@id/loginpassword"
            android:paddingLeft="10dp"
            android:src="@mipmap/loginpass" />

        <RelativeLayout
            android:id="@+id/remember_layout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/remember_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <TextView
                android:id="@+id/remember_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/remember_pass"
                android:text="记住密码"
                android:textColor="#e0e0e0"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@id/remember_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#ffae00"
            android:text="登录"
            android:textColor="#fef4e8"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginbottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="忘记密码？"
            android:textColor="#e0e0e0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="220dp"
            android:text="立即注册"
            android:textColor="#e0e0e0"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
